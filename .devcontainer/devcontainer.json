// Configuration of server image and settings in Codespaces
// File format: https://aka.ms/devcontainer.json. 
{
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "mcr.microsoft.com/devcontainers/universal:latest",

	// Use 'postCreateCommand' to run commands after the container is created.
	// "git config pull.rebase false", => needs to be configured before first pull or merge to prevent error
	// "cp & chmmod: dirty trick to make git automatically choose ours (current or local above remote) in case of merge conflicts. This prevents merge-conflicts. Merge-conflicts prevent code from begin saved directly, which is a major dissatisfier for students. With this merge approach they can fix conflicts afterwards by copy-pasting code from old versions, test it and do commit again.
	// "git config --global merge.conflictStyle diff3" => show source between ours and theirs in merge conflicts
	"postCreateCommand": "git config pull.rebase false &&  && cp .devcontainer/git-pull /usr/local/bin/git-pull && chmod +x /usr/local/bin/git-pull && git config --global merge.conflictStyle diff3", 
	
	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	"forwardPorts": [
		5173
	],
	"portsAttributes": {
		"5173": {
			"label": "Web Server",
			"onAutoForward": "openBrowser"
		}
	},
	
	// Configure tool-specific properties.
	"customizations": {
		// Configure properties specific to VS Code.
		"vscode": {
			"extensions": [
				"mathematic.vscode-pdf", // add viewer for pdf-files (this one supports vscode-web)
				"ms-vsliveshare.vsliveshare", // add google-docs like typing in same file, click on live-share button in left icon pane
				"mhutchie.git-graph", // add graphical viewer for branches and commits, click on button in Source-Code tab
				"GitHub.copilot-chat", "GitHub.copilot" // finish Copilot setup
			]
		}
	}
}
